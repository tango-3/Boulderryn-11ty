{
  "scripts": {
    "start": "npm-run-all --parallel css eleventy browsersync cms",
    "eleventy": "eleventy --watch",
    "debug": "set DEBUG=* & eleventy",
    "css": "postcss src/static/css/tailwind.css --o _site/static/css/style.css --watch",
    "build": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production tailwindcss -i src/static/css/tailwind.css -o _site/static/css/style.css",
    "browsersync": "browser-sync start --server _site --files _site --port 8080 --no-notify --no-open",
    "cms": "decap-server"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.7.1",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "decap-server": "^3.3.1",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.0",
    "luxon": "^2.3.0",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prismjs": "^1.26.0",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5"
  }
}
